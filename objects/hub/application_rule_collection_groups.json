[
  {
    "name": "application-group",
    "priority": 200,
    "rule_collections": [
      {
        "name": "vms-downloads",
        "action": "Allow",
        "priority": 2300,
        "rules": [
          {
            "name": "azure-ubuntu-archive",
            "source_addresses": ["${subnet_address_prefixes.work.WorkSubnet}", "${subnet_address_prefixes.monitor.MonitorSubnet}"],
            "destination_fqdns": ["azure.archive.ubuntu.com"],
            "protocols": [
              {
                "type": "Http",
                "port": 80
              }
            ]
          },
          {
            "name": "google-apis",
            "source_addresses": ["${subnet_address_prefixes.work.WorkSubnet}"],
            "destination_fqdns": ["storage.googleapis.com"],
            "protocols": [
              {
                "type": "Https",
                "port": 443
              }
            ]
          },
          {
            "name": "docker",
            "source_addresses": ["${subnet_address_prefixes.work.WorkSubnet}", "${subnet_address_prefixes.monitor.MonitorSubnet}"],
            "destination_fqdns": ["auth.docker.io", "registry-1.docker.io", "index.docker.io", "dseasb33srnrn.cloudfront.net", "production.cloudflare.docker.com"],
            "protocols": [
              {
                "type": "Https",
                "port": 443
              }
            ]
          }
        ]
      },
      {
        "name": "work-vm-azure-access",
        "action": "Allow",
        "priority": 2400,
        "rules": [
          {
            "name": "active-directory",
            "source_addresses": ["${subnet_address_prefixes.work.WorkSubnet}"],
            "destination_fqdns": ["login.microsoftonline.com"],
            "protocols": [
              {
                "type": "Https",
                "port": 443
              }
            ]
          },
          {
            "name": "resource-manager-both-vms",
            "source_addresses": ["${subnet_address_prefixes.work.WorkSubnet}", "${subnet_address_prefixes.monitor.MonitorSubnet}"],
            "destination_fqdns": ["management.azure.com"],
            "protocols": [
              {
                "type": "Https",
                "port": 443
              }
            ]
          }
        ]
      },
      {
        "name": "monitor-vm-azure-access",
        "action": "Allow",
        "priority": 2500,
        "rules": [
          {
            "name": "active-directory",
            "source_addresses": ["${subnet_address_prefixes.monitor.MonitorSubnet}"],
            "destination_fqdns": ["api.loganalytics.io"],
            "protocols": [
              {
                "type": "Https",
                "port": 443
              }
            ]
          }
        ]
      },
      {
        "name": "acr-access",
        "action": "Allow",
        "priority": 2600,
        "rules": [
          {
            "name": "acr-access",
            "source_addresses": ["${subnet_address_prefixes.work.WorkSubnet}", "${subnet_address_prefixes.work.AKSSubnet}"],
            "destination_fqdns": ["dtfhubacr.azurecr.io", "dtfhubacr.westeurope.data.azurecr.io"],
            "destination_fqdn_tags": [],
            "protocols": [
              {
                "type": "Https",
                "port": 443
              }
            ]
          }
        ]
      },
      {
        "name": "aks-access",
        "action": "Allow",
        "priority": 2700,
        "rules": [
          {
            "name": "aks-fqdn-tags",
            "source_addresses": ["${subnet_address_prefixes.work.AKSSubnet}"],
            "destination_fqdn_tags": ["AzureKubernetesService"],
            "protocols": [
              {
                "type": "Https",
                "port": 443
              }
            ]
          }
        ]
      },
      {
        "name": "monitor-vm-dns",
        "action": "Allow",
        "priority": 2800,
        "rules": [
          {
            "name": "monitor.net",
            "source_addresses": ["${vpn_address_prefixes.full}"],
            "destination_fqdns": ["grafana.monitor.net"],
            "protocols": [
              {
                "type": "Http",
                "port": 80
              }
            ]
          }
        ]
      }
    ]
  }
]