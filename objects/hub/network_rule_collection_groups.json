[
  {
    "name": "network-group",
    "priority": 100,
    "rule_collections": [
      {
        "name": "vm-access",
        "action": "Allow",
        "priority": 1000,
        "rules": [
          {
            "name": "ssh",
            "source_addresses": ["${vpn_address_prefixes.full}"],
            "protocols": ["TCP"],
            "destination_ports":["22"],
            "destination_addresses": ["${subnet_address_prefixes.work.WorkSubnet}", "${subnet_address_prefixes.monitor.MonitorSubnet}"]
          },
          {
            "name": "grafana-monitor",
            "source_addresses": ["${vpn_address_prefixes.full}"],
            "protocols": ["TCP"],
            "destination_ports":["80"],
            "destination_addresses": ["${subnet_address_prefixes.monitor.MonitorSubnet}"]
          }
        ]
      }
    ]
  }
]