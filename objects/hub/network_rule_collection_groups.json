[
  {
    "name": "network-group",
    "priority": 100,
    "rule_collections": [
      {
        "name": "vm-access",
        "action": "Allow",
        "priority": 1000,
        "rules": [
          {
            "name": "ssh",
            "source_addresses": ["${address_prefixes.vpn}"],
            "protocols": ["TCP"],
            "destination_ports":["22"],
            "destination_addresses": ["${address_prefixes.subnets.work.WorkSubnet}", "${address_prefixes.subnets.monitor.MonitorSubnet}"]
          },
          {
            "name": "grafana-monitor",
            "source_addresses": ["${address_prefixes.vpn}"],
            "protocols": ["TCP"],
            "destination_ports":["80"],
            "destination_addresses": ["${address_prefixes.subnets.monitor.MonitorSubnet}"]
          }
        ]
      }
]
  }
]